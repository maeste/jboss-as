<subsystem xmlns="urn:jboss:domain:jca:4.0">
    <archive-validation enabled="true" fail-on-error="true" fail-on-warn="false"/>
    <bean-validation enabled="true"/>
    <workmanager name="default">
        <short-running-threads name="default"
                               core-threads="50"
                               queue-length="50"
                               max-threads="50"
                               keep-alive-time="10" keep-alive-unit="seconds"/>
        <long-running-threads name="default"
                              core-threads="50"
                              queue-length="50"
                              max-threads="50"
                              keep-alive-time="10" keep-alive-unit="seconds"/>
    </workmanager>
    <bootstrap-contexts>
        <bootstrap-context name="default" workmanager="default"/>
    </bootstrap-contexts>
    <cached-connection-manager/>
</subsystem>
