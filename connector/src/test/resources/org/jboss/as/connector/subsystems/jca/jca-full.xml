<subsystem xmlns="urn:jboss:domain:jca:4.0">
  <!--Optional:-->
  <archive-validation enabled="true" fail-on-error="true" fail-on-warn="false"/>
  <!--Optional:-->
  <bean-validation enabled="false"/>
  <tracer enabled="true" />
  <workmanager name="default">
    <short-running-threads name="default" allow-core-timeout="true"
                           core-threads="3"
                           queue-length="3"
                           max-threads="3"
                           keep-alive-time="10" keep-alive-unit="minutes" thread-factory="string"/>
    <long-running-threads name="default" allow-core-timeout="true"
                          core-threads="3"
                          queue-length="3"
                          max-threads="3"
                          keep-alive-time="10" keep-alive-unit="milliseconds"
                          thread-factory="string"/>
  </workmanager>
  <!--Zero or more repetitions:-->
  <workmanager name="anotherWm">
    <short-running-threads name="anotherWm" allow-core-timeout="true"
                               core-threads="3"
                               queue-length="3"
                               max-threads="3"
                               keep-alive-time="10" keep-alive-unit="minutes" thread-factory="string"/>
        <long-running-threads name="anotherWm" allow-core-timeout="true"
                              core-threads="3"
                              queue-length="3"
                              max-threads="3"
                              keep-alive-time="10" keep-alive-unit="minutes"
                              thread-factory="string"/>
  </workmanager>
  <!--Optional:-->
  <distributed-workmanager name="MyDWM"
                           jgroups-stack="udp" jgroups-cluster="myChannel" request-timeout="100000">
      <policy-option name="watermark" value="0" />
      <selector-option name="myOption" value="ignored" />
      <short-running-threads name="MyDWM" allow-core-timeout="true"
                             core-threads="3"
                             queue-length="3"
                             max-threads="3"
                             keep-alive-time="10" keep-alive-unit="minutes" thread-factory="string"/>

  </distributed-workmanager>
    <bootstrap-contexts>
        <!--1 or more repetitions:-->

        <bootstrap-context name="default" workmanager="default"/>

        <bootstrap-context name="bootStrapContext" workmanager="anotherWm"/>
    </bootstrap-contexts>
  <!--Optional:-->
  <cached-connection-manager debug="false" error="true"/>
</subsystem>
