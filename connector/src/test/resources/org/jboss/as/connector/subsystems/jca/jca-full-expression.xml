<subsystem xmlns="urn:jboss:domain:jca:4.0">
    <!--Optional:-->
    <archive-validation enabled="${test.expr:true}" fail-on-error="${test.expr:true}"
                        fail-on-warn="${test.expr:false}"/>
    <!--Optional:-->
    <bean-validation enabled="${test.expr:false}"/>
    <tracer enabled="true"/>
    <workmanager name="default">
        <short-running-threads name="default" allow-core-timeout="${test.expr:true}"
                               core-threads="${test.expr:3}"
                               queue-length="${test.expr:3}"
                               max-threads="${test.expr:3}"
                               keep-alive-time="${test.expr:10}" keep-alive-unit="minutes"
                               thread-factory="string"/>
        <long-running-threads name="default" allow-core-timeout="${test.expr:true}"
                              core-threads="${test.expr:3}"
                              queue-length="${test.expr:3}"
                              max-threads="${test.expr:3}"
                              keep-alive-time="${test.expr:10}" keep-alive-unit="milliseconds"
                              thread-factory="string"/>
    </workmanager>
    <workmanager name="anotherWm">
        <short-running-threads name="anotherWm" allow-core-timeout="${test.expr:true}"
                               core-threads="${test.expr:3}"
                               queue-length="${test.expr:3}"
                               max-threads="${test.expr:3}"
                               keep-alive-time="${test.expr:10}" keep-alive-unit="minutes"
                               thread-factory="string"/>
        <!--Optional:-->
        <long-running-threads name="anotherWm" allow-core-timeout="${test.expr:true}"
                              core-threads="${test.expr:3}"
                              queue-length="${test.expr:3}"
                              max-threads="${test.expr:3}"
                              keep-alive-time="${test.expr:10}" keep-alive-unit="minutes"
                              thread-factory="string"/>

    </workmanager>
    <distributed-workmanager name="MyDWM"
                             selector-name="${test.expr:PING_TIME}"
                             policy-name="${test.expr:WATERMARK}"
                             jgroups-stack="${test.expr:udp}" jgroups-cluster="${test.expr:myChannel}"
                             request-timeout="${test.expr:100000}">
        <policy-option name="watermark" value="${test.expr:0}" />
        <selector-option name="myOption" value="${test.expr:ignored}" />
        <short-running-threads name="MyDWM" allow-core-timeout="${test.expr:true}"
                               core-threads="${test.expr:3}"
                               queue-length="${test.expr:3}"
                               max-threads="${test.expr:3}"
                               keep-alive-time="${test.expr:10}" keep-alive-unit="minutes"
                               thread-factory="string"/>
    </distributed-workmanager>
    <!--Optional:-->
    <bootstrap-contexts>
        <!--1 or more repetitions:-->
        <bootstrap-context name="default" workmanager="default"/>
        <bootstrap-context name="bootStrapContext" workmanager="${test.expr:anotherWm}"/>
    </bootstrap-contexts>
    <!--Optional:-->
    <cached-connection-manager debug="${test.expr:false}" error="${test.expr:true}"/>
</subsystem>
